<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskOverviewActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                    android:id="@+id/editTaskButton"
                    android:nestedScrollingEnabled="true"
                    android:background="@drawable/edit"
                    android:layout_width="30dp"
                    android:layout_height="29dp"
                    android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_alignEnd="@+id/include"
                android:layout_marginTop="5dp" />

            <include layout="@layout/shared_content_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/include"
                android:layout_below="@+id/editTaskButton"
                android:layout_centerHorizontal="true" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finished?"
                android:id="@+id/switchFinished"
                android:textSize="18sp"
                android:checked="false"
                android:layout_alignParentEnd="false"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/editTaskButton"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="#FFFFFF"
                android:id="@+id/deleteTaskButton"
                android:background="#fc0707"
                android:layout_centerVertical="true"
                android:layout_alignBottom="@id/include"/>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>