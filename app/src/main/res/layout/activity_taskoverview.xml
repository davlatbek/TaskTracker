<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskOverviewActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="300dp"
                android:layout_height="fill_parent">

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:id="@+id/btnIsDone"
                    android:checked="false"
                    android:textOn="Done"
                    android:textOff="Not Done"
                    android:textColor="#001069"
                    android:background="#FFFFFF"
                    android:layout_column="1" />
            </TableRow>



            <include layout="@layout/shared_content_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnIsDone"
                android:layout_alignParentStart="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:id="@+id/editTaskButton"
                android:background="#ffffff"
                android:layout_gravity="center_horizontal"
                android:nestedScrollingEnabled="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="#FFFFFF"
                android:id="@+id/deleteTaskButton"
                android:background="#fc0707"
                android:layout_gravity="center_horizontal" />

        </TableLayout>

    </ScrollView>

</LinearLayout>