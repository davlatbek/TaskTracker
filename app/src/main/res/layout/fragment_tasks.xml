<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbecc7">

    <Button
        android:layout_width="170dip"
        android:layout_height="135dip"
        android:text="Over Due"
        android:id="@+id/over_due_button"
        android:layout_marginLeft="16dp"
        android:background="#add480"
        android:drawableTop="@drawable/ic_account_circle_24dp"
        android:layout_alignTop="@+id/actual_button"
        android:layout_alignParentStart="true"
        android:paddingTop="40dp"
        android:paddingBottom="20dp" />

    <Button
        android:layout_width="170dip"
        android:layout_height="135dip"
        android:text="Actual"
        android:id="@+id/actual_button"
        android:background="#add480"
        android:drawableTop="@drawable/ic_access_time_24dp"
        android:layout_marginLeft="10dp"
        android:layout_above="@+id/add_task_button"
        android:layout_toEndOf="@+id/over_due_button"
        android:layout_marginBottom="23dp"
        android:paddingTop="40dp"
        android:paddingBottom="20dp" />

    <Button
        android:layout_width="170dip"
        android:layout_height="135dip"
        android:text="Add Task"
        android:id="@+id/add_task_button"
        android:background="#558a2f"
        android:drawableTop="@drawable/ic_add_circle_outline_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/actual_button"
        android:layout_marginBottom="160dp"
        android:layout_marginTop="-15dp"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="170dip"
        android:layout_height="135dip"
        android:text="Done"
        android:id="@+id/done_button"
        android:background="#acd380"
        android:drawableTop="@drawable/ic_check_circle_24dp"
        android:layout_below="@+id/actual_button"
        android:layout_toStartOf="@+id/actual_button"
        android:layout_marginTop="-15dp"
        android:paddingTop="40dp"
        android:paddingBottom="20dp" />
</RelativeLayout>