<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbecc7"
    android:orientation="vertical"
    android:weightSum="2">

    <Button
        android:id="@+id/over_due_button"
        android:layout_width="170dip"
        android:layout_height="135dip"
        android:layout_marginLeft="10dp"
        android:background="#add480"
        android:drawableTop="@drawable/vector_drawable_ic_error_outline_black___px"
        android:paddingBottom="20dp"
        android:paddingTop="40dp"
        android:text="Over Due"
        android:layout_weight="1"
        android:layout_alignBaseline="@+id/actual_button"
        android:layout_alignBottom="@+id/actual_button"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/actual_button"
        android:layout_width="170dip"
        android:layout_height="135dip"
        android:layout_marginLeft="10dp"
        android:background="#add480"
        android:drawableTop="@drawable/ic_access_time_24dp"
        android:paddingBottom="20dp"
        android:paddingTop="40dp"
        android:text="Actual"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="88dp"
        android:layout_marginRight="10dp" />

    <Button
        android:id="@+id/add_task_button"
        android:layout_width="170dip"
        android:layout_height="135dip"
        android:background="#558a2f"
        android:drawableTop="@drawable/ic_add_circle_outline_24dp"
        android:paddingBottom="20dp"
        android:paddingTop="40dp"
        android:text="Add Task"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:layout_below="@+id/over_due_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp" />

    <Button
        android:id="@+id/done_button"
        android:layout_width="170dip"
        android:layout_height="135dip"
        android:background="#acd380"
        android:drawableTop="@drawable/ic_drawable_checked"
        android:paddingBottom="20dp"
        android:paddingTop="40dp"
        android:text="Done"
        android:layout_weight="1"
        android:layout_below="@+id/over_due_button"
        android:layout_alignStart="@+id/over_due_button"
        android:layout_marginTop="20dp" />
</RelativeLayout>